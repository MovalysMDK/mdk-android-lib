<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#FEB722"
            	android:centerColor="#FFB416"
                android:endColor="#FEA107"
                android:angle="90" android:centerX="0.5" android:centerY="0.5" android:type="radial" android:gradientRadius="800"/>
            <stroke android:width="1dip" android:color="#FFFFFFFF"/>
            <corners android:radius="3dip" />
            <padding android:left="10dip" android:top="10dip"
                android:right="10dip" android:bottom="10dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#FBC95E"
            	android:centerColor="#FCC756"
                android:endColor="#FCC44C"
                android:angle="45" android:centerX="0.5" android:centerY="0.5" android:type="radial" android:gradientRadius="315"/>
            <stroke android:width="1dip" android:color="#FFFFFFFF" />
            <corners android:radius="5dip" />
            <padding android:left="10dip" android:top="10dip"
                android:right="10dip" android:bottom="10dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
        	<solid android:color="#FF444444"/>
            <stroke android:width="1dip" android:color="#FFFFFFFF" />    
            <corners android:radius="5dip" />
            <padding android:left="10dip" android:top="10dip"
                android:right="10dip" android:bottom="10dip" />
        </shape>
    </item>
</selector>
