<?xml version="1.0" encoding="UTF-8"?>
<resources>

	<!-- detail_label -->
	<style name="detail_label.mdk" >
		<item name="android:textColor">@color/detail_label</item>
		<item name="android:padding">3dip</item>
	</style>

	<!-- detail_value -->
	<style name="detail_value.mdk">
		<item name="android:textColor">@color/detail_value</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">3dip</item>
	</style>

	<!-- detail_edit -->
	<style name="detail_edit.mdk" parent="@style/detail_value">
		<item name="android:background">@drawable/textfield_selector</item>
		<item name="android:textColor">@color/detail_edit</item>
		<item name="android:padding">3dip</item>
	</style>

	<!-- detail_valuemultiautocomplete -->
	<style name="detail_valuemultiautocomplete.mdk">
		<!-- NOTHING -->
	</style>
	
	<!-- FilterButton -->
	<style name="FilterButton.mdk">
		<!-- NOTHING -->
	</style>
	
	<!-- Button -->
	<style name="Button.mdk">
		<!-- NOTHING -->
	</style>
	
	<!-- ImageButton -->
	<style name="ImageButton.mdk">
		<!-- NOTHING -->
	</style>
	
	<!-- LISTITEM_1 -->
	<style name="LISTITEM_1.mdk">
		<item name="android:background">@color/dark_grey</item>
	</style>
	
	<!-- LISTITEM_2 -->
	<style name="LISTITEM_2.mdk">
		<item name="android:background">@color/expandableGroupBackground</item>
	</style>
	
	<!-- LISTITEM_3 -->
	<style name="LISTITEM_3.mdk">
		<item name="android:background">@color/dark_grey</item>
	</style>
	
	<!-- splashscreen -->
	<style name="splashscreen.mdk">
		<item name="android:drawablePadding">5dip</item>
		<item name="android:textStyle">bold</item>
		<item name="android:windowBackground">@color/splash_background</item>
	</style>
	
	<!-- splashscreen_copyright -->
	<style name="splashscreen_copyright.mdk">
		<item name="android:textSize">9px</item>
	</style>
	
	<!-- MovalysProgressBarHorizontal -->
	<style name="MovalysProgressBarHorizontal.mdk">
          <item name="android:progressDrawable">@drawable/progress_horizontal</item>
	</style>
	
	<!-- MovalysProgressBarIndeterminate -->
	<style name="MovalysProgressBarIndeterminate.mdk">
          <item name="android:indeterminateDrawable">@drawable/progress_indeterminate</item>
	</style>
	
	<!-- MovalySeekBar -->
    <style name="MovalySeekBar.mdk">
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
         <item name="android:indeterminateDrawable">@drawable/progress_indeterminate</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:focusable">true</item>
    </style>
    
    <!-- flipperexpandabletitle_valueItem1 -->
	<style name="flipperexpandabletitle_valueItem1.mdk">
		<item name="android:textColor">@color/expandableTitleItem1</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<!-- flipperexpandabletitle_valueItem2 -->
	<style name="flipperexpandabletitle_valueItem2.mdk">
		<item name="android:textColor">@color/expandableTitleItem2</item>
		<item name="android:textStyle">italic</item>  
	</style>
	
	<!-- expandableGroup_valueItem1 -->
	<style name="expandableGroup_valueItem1.mdk">
		<item name="android:textColor">@color/expandableGroupItem1</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<!-- expandableGroup_valueItem2 -->
	<style name="expandableGroup_valueItem2.mdk">
		<item name="android:textColor">@color/expandableGroupItem2</item>
		<item name="android:textStyle">italic</item>
	</style>
	
	<!-- expandableChild_valueItem1 -->
	<style name="expandableChild_valueItem1.mdk" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@color/simpleListItem1</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<!-- expandableChild_valueItem2 -->
	<style name="expandableChild_valueItem2.mdk">
		<item name="android:textColor">@color/simpleListItem2</item>
		<item name="android:textStyle">italic</item>
	</style>
	
	<!-- simplelistitem_valueItem1 -->
	<style name="simplelistitem_valueItem1.mdk">
		<item name="android:textColor">@color/simpleListItem1</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<!-- simplelistitem_valueItem2 -->
	<style name="simplelistitem_valueItem2.mdk">
		<item name="android:textColor">@color/simpleListItem2</item>
		<item name="android:textStyle">italic</item>
	</style>
	
	<!-- simpleSpinner_Item -->
	<style name="simpleSpinner_Item.mdk" parent="@style/detail_value.mdk">
		<item name="android:textColor">@color/simpleSpinnerItem</item>
     	<item name="android:clickable">true</item> 
	</style>
	
	<!-- simpleSpinner_dropDown -->
	<style name="simpleSpinner_dropDown.mdk">
		<item name="android:textColor">@color/simpleSpinnerItem</item>
	</style>
	
	<!-- SpinnerCustom -->
    <style name="SpinnerCustom.mdk">
        <item name="android:background">@drawable/btn_dropdown</item>
        <item name="android:clickable">true</item>
    </style>
    
	<!-- SectionTitle -->
	<style name="SectionTitle.mdk" parent="@android:style/TextAppearance.WindowTitle">
		<item name="android:drawablePadding">2dip</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:windowBackground">@color/background_Title</item>
		<item name="android:gravity">center</item>
	</style>
	
    <!-- fixedListItemBloc -->
	<style name="fixedListItemBloc.mdk">
		<item name="android:background">@drawable/bloc</item>
		<item name="android:paddingLeft">5dip</item>
		<item name="android:paddingRight">5dip</item>
		<item name="android:paddingTop">5dip</item>
		<item name="android:gravity">center_vertical|fill_horizontal</item>
		<item name="android:layout_margin">5dip</item>
	</style>
	
	<!-- tab_theme -->
	<style name="tab_theme.mdk">
		<item name="android:tabWidgetStyle">@style/lighttabwidget</item>
	</style>
	
	<!-- lighttabwidget -->
	<style name="lighttabwidget.mdk">
		<item name="android:textSize">12px</item>
		<item name="android:textColor">#1E90FF</item>
	</style>
	
	<!-- LineSeparatorView -->
	<style name="LineSeparatorView.mdk">
		<item name="android:background">@color/white</item> 
		<item name="android:layout_height">0.15dip</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_margin">5dip</item>
	</style>
	
	<!-- SearchSpinnerCustom -->
	<style name="SearchSpinnerCustom.mdk">
		<item name="android:background">@drawable/btn_dropdown</item>
		<item name="android:clickable">true</item>
	</style>
	
</resources>