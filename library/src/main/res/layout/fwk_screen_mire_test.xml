<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	android:id="@+id/screen_mire_test"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:orientation="vertical">
	
	<!-- première mire -->
	<LinearLayout 
		android:id="@+id/mire_un"
		android:layout_width="256dip" 
		android:layout_height="256dip"
		android:background="#0000FF"
		android:orientation="vertical">
		
		<TextView
			android:id="@+id/text_un"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="small text size" 
			style="@android:style/TextAppearance.Small"/>
		
		<TextView
			android:id="@+id/text_deux"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="medium text size"
			style="@android:style/TextAppearance.Medium" />
			
		<TextView
			android:id="@+id/text_trois"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="big text size"
			style="@android:style/TextAppearance.Large" />
			
		<TextView
			android:id="@+id/mire_metrics_density"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="height" />
		
		<TextView
			android:id="@+id/mire_metrics_densitydpi"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="width" />
		
		<TextView
			android:id="@+id/mire_metrics_scaled_density"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="width" />
			
		<TextView
			android:id="@+id/mire_metrics_hight_pixels"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="density" />
			
		<TextView
			android:id="@+id/mire_metrics_width_pixels"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="height" />
			
		<TextView
			android:id="@+id/mire_metrics_xdpi"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="density" />
		
		<TextView
			android:id="@+id/mire_metrics_ydpi"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="density" />
					
	</LinearLayout>
	
	<!-- deuxième mire -->
	<LinearLayout 
		android:id="@+id/mire_deux"
		android:layout_width="256sp" 
		android:layout_height="256sp"
		android:background="#ED0000"
		android:orientation="vertical">
		
		
		<TextView
			android:id="@+id/text_quatre"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="small text size" 
			style="@android:style/TextAppearance.Small"/>
		
		<TextView
			android:id="@+id/text_cinq"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="medium text size"
			style="@android:style/TextAppearance.Medium" />
			
		<TextView
			android:id="@+id/text_six"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="big text size"
			style="@android:style/TextAppearance.Large" />
			
	</LinearLayout>
	
</LinearLayout>