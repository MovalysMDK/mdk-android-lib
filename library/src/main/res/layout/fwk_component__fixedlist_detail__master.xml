<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/component_fixedlist_detail__visualpanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/component__fixedlist_detail__master"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialog_text_background"
        android:orientation="vertical" >

        <!-- the generated content will be included here -->

        <View
            android:id="@+id/bottom_separator"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/dialog_text"
            android:paddingTop="3dp" />

        <LinearLayout
            android:id="@+id/component__fixedlist_detail__visualpanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dialog_text_background"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/component__fixedlist_detail_cancel__button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete" />

            <ImageButton
                android:id="@+id/component__fixedlist_detail_ok__button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_btn_ok" />

            <ImageButton
                android:id="@+id/component__fixedlist_detail_okandnext__button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_btn_okandnext" />
        </LinearLayout>
