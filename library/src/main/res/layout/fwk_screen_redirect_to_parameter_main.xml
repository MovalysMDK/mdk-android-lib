<?xml version="1.0" encoding="UTF-8"?>
<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout 
	android:id="@+id/screen_redirect_to_parameter"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@color/dialog_separator_background"
	android:layout_gravity="center_vertical|center_horizontal">
	<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMSeparator
		android:id="@+id/top_separator" 
		android:layout_height="1dip" android:layout_width="match_parent" 
		android:background="@color/dialog_separator" />
	<!-- layout horizontale pour l'image et le texte -->
	<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout 
		android:id="@+id/screen_redirect_to_parameter_top"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginBottom="1dp"
		android:background="@color/dialog_text_background">
		<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMImageView
			android:id="@+id/icon"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@android:drawable/ic_dialog_alert"
			android:layout_marginRight="10dp" android:layout_marginLeft="10dp"
			android:layout_marginTop="15dp" android:layout_marginBottom="15dp" 
			android:layout_gravity="center_vertical|center_horizontal"/>
		<!-- layout vertical pour la saisie du texte -->
	    <com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout 
	    	android:id="@+id/screen_redirect_to_parameter_text_layout"
	    	android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:orientation="vertical"
	    	android:layout_gravity="center_vertical|center_horizontal"
			android:layout_marginRight="10dp">
	        <com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMTextView 
		    	android:id="@+id/screen_redirect_to_parameter_text"
		    	android:layout_width="wrap_content" android:layout_height="wrap_content"
		    	android:text="@string/screen_redirect_to_parameter_text"
		        android:textColor="@color/dialog_text" />
			<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMTextView 
				android:id="@+id/screen_redirect_to_parameter_question"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
		        android:text="@string/screen_redirect_to_parameter_question"
				android:textColor="@color/dialog_text" />
		</com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout>
	</com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout>
	<!-- Layout horizontale pour les boutons -->
	<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMTableLayout 
		android:id="@+id/screen_redirect_to_parameter_valid_down"
		android:layout_width="match_parent" android:layout_height="match_parent"
    	android:stretchColumns="0,1"
    	android:background="@color/dialog_button_background">
		<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMTableRow android:id="@+id/row1">
			<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMButton 
				android:id="@+id/screen_redirect_to_parameter_param_button" 
				android:layout_width="match_parent" android:layout_height="match_parent"
				android:text="@string/screen_redirect_to_parameter_param_button"
				android:layout_marginTop="5dp"/>
			<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMButton 
				android:id="@+id/screen_redirect_to_parameter_stop_button" 
				android:layout_width="match_parent" android:layout_height="match_parent"
				android:text="@string/screen_redirect_to_parameter_stop_button"
				android:layout_marginTop="5dp"/>
		</com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMTableRow>
	</com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMTableLayout>
</com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout>