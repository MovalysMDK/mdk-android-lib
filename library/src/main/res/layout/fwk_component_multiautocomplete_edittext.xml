<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/component_multiautocomplete__editText__group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dip"
    android:paddingRight="5dip" >

    <TextView
        android:id="@+id/component_multiautocomplete__editText__label"
        style="?attr/detail_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/component_multiautocomplete__editText__label" />

    <MultiAutoCompleteTextView
        android:id="@+id/component_multiautocomplete__editText__edit"
        style="?attr/detail_valuemultiautocomplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textLongMessage|textMultiLine|textAutoCorrect|textAutoComplete"
        android:lines="4"
        android:maxLength="4000"
        android:saveEnabled="false" />

    <LinearLayout
        android:id="@+id/component_multiautocomplete__btn__layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/component_multiautocomplete__btnErase__button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_delete" />

        <ImageButton
            android:id="@+id/component_multiautocomplete__btnSpeackNow__button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_btn_speak_now" />
    </LinearLayout>

</LinearLayout>