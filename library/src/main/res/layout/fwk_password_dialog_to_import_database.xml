<?xml version="1.0" encoding="UTF-8"?>
<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout 
		android:id="@+id/dialog_confirmPasswordForImportDatabase_main_layout"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@color/dialog_separator_background"
		android:layout_gravity="center_vertical" 
		xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- icon + titre -->
	<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout 
			android:id="@+id/dialog_confirmPasswordForImportDatabase_title_layout"
			android:layout_width="match_parent"	android:layout_height="wrap_content"
			android:orientation="horizontal" android:background="@color/dialog_text_background">
	
		<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMImageView
				android:id="@+id/dialog_confirmPasswordForImportDatabase_icon"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:src="@android:drawable/ic_dialog_alert"
				android:layout_marginRight="10dp" android:layout_marginLeft="10dp"
				android:layout_marginTop="15dp" android:layout_marginBottom="15dp"
				android:layout_gravity="center_vertical"/>

		<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMTextView 
				android:id="@+id/dialog_confirmPasswordForImportDatabase_title_text"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@string/dialog_confirmPasswordForImportDatabase_title_text"
				android:textColor="@color/dialog_text"
				android:layout_gravity="center_vertical" />
	</com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout>

	<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMSeparator
			android:id="@+id/dialog_confirmPasswordForImportDatabase_top_separator"
			android:layout_width="match_parent" android:layout_height="1dip"
			android:background="@color/dialog_separator" />

	<!-- texte -->
	<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout 
			android:id="@+id/dialog_confirmPasswordForImportDatabase_content_layout"
			android:layout_width="match_parent"	android:layout_height="wrap_content"
			android:orientation="horizontal" android:background="@color/dialog_text_background">

		<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMTextView
		    android:id="@+id/dialog_confirmPasswordForImportDatabase_content_text"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginBottom="15dp"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp"
		    android:layout_marginTop="20dp"
		    android:text="@string/dialog_confirmPasswordForImportDatabase_content_text"
		    android:textColor="@color/dialog_text"
		    android:layout_weight="0.5" />

		<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMEditText
		    android:id="@+id/dialog_confirmPasswordForImportDatabase_content_edit"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.5" android:password="true"
		    android:layout_marginTop="10dp"/>

	</com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout>

	<!-- boutons -->

	<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout
	    android:id="@+id/dialog_confirmPasswordForImportDatabase_button_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/dialog_text_background"
	    android:orientation="horizontal" >
		
		<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMButton 
				android:id="@+id/dialog_confirmPasswordForImportDatabase_ok_button"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:text="@string/dialog_confirmPasswordForImportDatabase_ok_btn" android:layout_marginTop="5dp"
				android:layout_weight="0.5"/>

		<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMButton
		    android:id="@+id/dialog_confirmPasswordForImportDatabase_ko_button"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:text="@string/dialog_confirmPasswordForImportDatabase_ko_btn" 
		    android:layout_weight="0.5"/>

	</com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout>
</com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout>