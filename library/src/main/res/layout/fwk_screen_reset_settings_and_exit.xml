<?xml version="1.0" encoding="UTF-8"?>
<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen_reset_settings_and_exit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@color/dialog_separator_background"
    android:orientation="vertical" >

    <com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMSeparator
        android:id="@+id/top_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/dialog_separator" />
    <!-- layout horizontale pour l'image et le texte -->

    <com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout
        android:id="@+id/screen_reset_settings_and_exit_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/dialog_text_background"
        android:orientation="horizontal" >

        <com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:src="@android:drawable/ic_dialog_alert" />
        <!-- layout vertical pour la saisie du texte -->

        <com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout
            android:id="@+id/screen_reset_settings_and_exit_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMTextView
                android:id="@+id/screen_reset_settings_and_exit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/screen_reset_settings_and_exit_text"
                android:textColor="@color/dialog_text" />

            <com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMTextView
                android:id="@+id/screen_reset_settings_and_exit_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dialog_text" />
        </com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout>
    </com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout>
    <!-- Layout horizontale pour les boutons -->

    <com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMTableLayout
        android:id="@+id/screen_reset_settings_and_exit_valid_down"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dialog_button_background"
        android:stretchColumns="0,1" >

        <com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMTableRow android:id="@+id/row1" >

            <com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMButton
                android:id="@+id/screen_reset_settings_and_exit_ok_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="@string/screen_reset_settings_and_exit_text_exit_button" />
        </com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMTableRow>
    </com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMTableLayout>

</com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMLinearLayout>