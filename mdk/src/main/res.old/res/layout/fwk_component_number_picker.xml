<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:movalys="http://www.adeuza.com/movalys/mm/android"
    android:id="@+id/component_numberpicker__number__group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dip"
    android:paddingRight="5dip" >

    <TextView
        android:id="@+id/component_numberpicker__number__label"
        style="?attr/detail_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    <com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMNumberPicker
        android:id="@+id/component_numberpicker__int__picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	movalys:max-value="1000"
        movalys:orientation="horizontal" />

</LinearLayout>