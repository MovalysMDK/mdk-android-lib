<!-- this layout allows the framework to present a view flipper that includes 
	+ a header + a flipper between multiples ExpandableListViews The component 
	embeded a ViewModel tha allow to deal with 3 embeded lists -->
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/component__flipper_expandable_list__panel"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<!-- the header -->
	<RelativeLayout
		android:id="@+id/relativeLayout1" android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<Button
			android:id="@+id/flipper_expandable_list__btn_previous__button"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
			android:background="@drawable/ic_arrow_previous" />
		<Button
			android:id="@+id/flipper_expandable_list__btn_next__button"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_alignParentTop="true" android:layout_alignParentRight="true"
			android:background="@drawable/ic_arrow_next" />
		<FrameLayout android:id="@+id/flipper_expandable_list__title__layout"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/flipper_expandable_list__btn_previous__button"
			android:layout_toLeftOf="@+id/flipper_expandable_list__btn_next__button"
			>
		</FrameLayout>
	</RelativeLayout>
	<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMSeparator
		android:id="@+id/flipper_expandable_list__list__group"
		android:layout_height="1dip" android:layout_width="match_parent"/>
	<!-- the view Annimator -->
	<com.adeuza.movalysfwk.mobile.mf4android.ui.views.InnerExpandableListView
		android:id="@+id/flipper_expandable_list_item__list__master" 
		android:layout_width="match_parent"	
		android:layout_height="wrap_content"/>
</LinearLayout>
