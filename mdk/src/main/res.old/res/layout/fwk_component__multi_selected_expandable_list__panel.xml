<!--
    Layout du composant MMMultiSelectedListView qui contient une liste à deux niveau.
    Chaque item de cette liste possède une checkbox pour permettre la multi sélection.
    Chaque item sélectionné est envoyé dans un composant MMMultiSelectedFixedList qui est situé en haut de l'écran.
    Dans chaque item de cette liste de résultat, on ajoute une corbeille pour gérer la suppression de l'item dans la liste de résultats.
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:movalys="http://www.adeuza.com/movalys/mm/android"
    android:id="@+id/fwk_component__multi_selected_expandable_list__panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMMultiSelectedFixedListView
        android:id="@+id/component__multi_selected_expandable_list_selected_item_view__panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        movalys:titleMode="false" />

    <ExpandableListView
        android:id="@+id/component__multi_selected_expandable_list_view__panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/component__multi_selected_expandable_list_selected_item_view__panel" />

</RelativeLayout>