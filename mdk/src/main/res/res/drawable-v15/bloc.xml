<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/background_Bloc_pressed_start"
            	android:centerColor="@color/background_Bloc_pressed_center"
                android:endColor="@color/background_Bloc_pressed_end"
                android:angle="90" android:centerX="0.5" android:centerY="0.5" android:type="radial" android:gradientRadius="800"/>
            <stroke android:width="1dip" android:color="@color/background_Bloc_pressed_stroke"/>
            <corners android:radius="3dip" />
            <padding android:left="10dip" android:top="10dip"
                android:right="10dip" android:bottom="10dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/background_Bloc_focused_start"
            	android:centerColor="@color/background_Bloc_focused_center"
                android:endColor="@color/background_Bloc_focused_end"
                android:angle="45" android:centerX="0.5" android:centerY="0.5" android:type="radial" android:gradientRadius="315"/>
            <stroke android:width="1dip" android:color="@color/background_Bloc_focused_stroke" />
            <corners android:radius="5dip" />
            <padding android:left="10dip" android:top="10dip"
                android:right="10dip" android:bottom="10dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_Bloc"/>
            <stroke android:width="1dip" android:color="@color/white" />    
            <corners android:radius="5dip" />
            <padding android:left="10dip" android:top="10dip"
                android:right="10dip" android:bottom="10dip" />
        </shape>
    </item>
</selector>
