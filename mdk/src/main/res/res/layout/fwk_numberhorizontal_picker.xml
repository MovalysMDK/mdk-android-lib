<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/component_numberpicker__picker__group"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:paddingLeft="5dip" android:paddingRight="5dip" android:orientation="horizontal">
	
	<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMNumberPickerButton
		android:id="@+id/component_numberpicker__decrement__button" 
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:background="@drawable/horizontalpicker_down_btn"/>

	<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMEditText
		android:id="@+id/component_numberpicker__number__edit" android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical" android:background="@drawable/horizontalpicker_input" 
		android:gravity="center"
		android:inputType="number|numberSigned"
		android:singleLine="true" android:textColor="@color/numberpicker_text"/>

	<com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMNumberPickerButton
		android:id="@+id/component_numberpicker__increment__button" 
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:background="@drawable/horizontalpicker_up_btn"/>
	
</LinearLayout>
