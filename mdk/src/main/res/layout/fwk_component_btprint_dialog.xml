<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/component_btprint__btprintDialog__panel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@color/dialog_separator_background"
    android:orientation="vertical" >

    <com.adeuza.movalysfwk.mobile.mf4android.ui.views.MMSeparator
        android:id="@+id/component_btprint__btprintDialog_content__separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/dialog_separator" />

    <LinearLayout
        android:id="@+id/component_btprint__btprintDialog_content__top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialog_text_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <ProgressBar
            android:id="@+id/component_btprint__btprintDialog_progress_elem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp" />

        <TableLayout
            android:id="@+id/component_btprint__btprintDialog_content__group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableRow android:id="@+id/component_btprint__btprintDialog_reference__group" >

                <TextView
                    android:id="@+id/component_btprint__btprintDialog_reference__label"
                    style="?attr/detail_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/component_btprint__btprintDialog_reference__label" />

                <TextView
                    android:id="@+id/component_btprint__btprintDialog_reference__value"
                    style="?attr/detail_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow android:id="@+id/component_btprint__btprintDialog_message__group" >

                <TextView
                    android:id="@+id/component_btprint__btprintDialog_message__label"
                    style="?attr/detail_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/component_btprint__btprintDialog_message__label" />

                <TextView
                    android:id="@+id/component_btprint__btprintDialog_message__value"
                    style="?attr/detail_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow android:id="@+id/component_btprint__btprintDialog_error__group" >

                <TextView
                    android:id="@+id/component_btprint__btprintDialog_error__label"
                    style="?attr/detail_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/component_btprint__btprintDialog_error__label" />

                <TextView
                    android:id="@+id/component_btprint__btprintDialog_error__value"
                    style="?attr/detail_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottom_separator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/dialog_text"
        android:paddingTop="3dp" />

    <LinearLayout
        android:id="@+id/component_btprint__btprintDialog_button__mainlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/dialog_button_background"
        android:paddingTop="5dp" >

        <Button
            android:id="@+id/component_btprint__btprintDialog_close__button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="@string/generic_message_close" />
    </LinearLayout>

</LinearLayout>