<!-- 
	Composant permettant d'enrober un item de liste à deux niveau dans un composant MMMultiSelectedListView, 
	avec un layout possédant une MMCheckBox pour permettre la multi sélection d'items.
 -->
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/component__multi_selected_expandable_list_item__master"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:focusable="false" >

    <CheckBox
        android:id="@+id/vmdocumentedredevablepanellistdocumentsimpl__select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:clickable="false" />

    <RelativeLayout
        android:id="@+id/component__multi_selected_expandable_list_item__content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" 
        android:focusable="false"/>

</RelativeLayout>